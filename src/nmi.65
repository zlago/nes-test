.include "nes.i" ; hardware definitions

.segment "ZEROPAGE"
zNMI: .res 1 ; incremented each frame
.exportzp zNMI

.segment "CODE"
; non-maskable interrupt
NMI:
.export NMI
	; save registers
		pha ; a
		txa
		pha ; x
		tya
		pha ; y
	; run NMI stuff
		bit PPUSTATUS ; reset vblank flag
		inc zNMI ; increment nmi flag
	; restore registers
		pla ; y
		tay
		pla ; x
		tax
		pla ; a
	; done, return
	rti